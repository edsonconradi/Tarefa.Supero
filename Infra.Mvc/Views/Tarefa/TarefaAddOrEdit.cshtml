@model Infra.Mvc.Models.TarefaViewModel
@{
    ViewBag.Title = "AddOrEdit";
}




<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Titulo)
            @Html.EditorFor(model => model.Titulo)
            @Html.ValidationMessageFor(model => model.Titulo)
        </div>

     

        <div class="form-group">
            @Html.LabelFor(model => model.Responsavel)
            @Html.EditorFor(model => model.Responsavel)           
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Data)
            @Html.EditorFor(model => model.Data, new { htmlAttributes = new {  @id = "dataInicio", @Titulo = "dataInicio", @type = "DateTime", @onfocus = "DtaInicio()" } })          
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Hora)
            @Html.EditorFor(model => model.Hora)          
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Descricao)
            @Html.TextAreaFor(model => model.Descricao, 3, 30, null)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Concluida)
            @Html.CheckBoxFor(model => model.Concluida)          
        </div>
       


        <div class="form-group">
            <input type="submit" value="Confirmar" class="btn button" />
            <input type="reset" value="Cancelar" class="btn button" />
        </div>
    }
</div>


<script type="text/javascript">

    window.onload = function () {
        DtaInicio();
    }


    function DtaInicio() {
        $('#dataInicio').datepicker({
            dateFormat: 'dd/mm/yy',
            dayNames: ['Domingo', 'Segunda', 'Terça', 'Quarta', 'Quinta', 'Sexta', 'Sábado'],
            dayNamesMin: ['D', 'S', 'T', 'Q', 'Q', 'S', 'S', 'D'],
            dayNamesShort: ['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb', 'Dom'],
            monthNames: ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro'],
            monthNamesShort: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez'],
            nextText: 'Proximo',
            prevText: 'Anterior'
        })
    };

</script>


@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}